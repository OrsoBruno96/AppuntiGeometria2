%%% MISCELLANEOUS %%%

\newcommand*\inv[1]{\frac{1}{#1}} % \inv{x} = 1/x
\newcommand*\abs[1]{|{#1}|} % absolute value
\newcommand*\Abs[1]{\left|{#1}\right|} % absolute value (with big bars)
\newcommand*\avg[1]{\langle{#1}\rangle} % average

\DeclareMathOperator\id{id} % identity

\newcommand*\R{\mathbb{R}} % set/field of real numbers
\newcommand*\Q{\mathbb{Q}} % set/field of rational numbers
\newcommand*\N{\mathbb{N}} % set of natural numbers

\newcommand*\quoset[2]{{#1}/{#2}} % insieme quoziente

%%% PROOFS %%%

\newcommand*\wlg{\TextOrMath{\texttt{WLOG} }{\;\mathtt{WLOG}\;}} % without loss of generality

\newcommand*\proofleftarrow{\impliedby} % simbolo per dire che dimostri la freccia verso sinistra
\newcommand*\proofrightarrow{\implies} % simbolo per dire che dimostri la freccia verso destra

\newcommand*\et{\wedge} % \et = ∧
\newcommand*\vel{\vee} % \vel = ∨

\newcommand*\notimplies{\centernot\implies}
\newcommand*\so{\rightarrow\,}
\newcommand*\os{\leftarrow\,}

\newcommand*\is{:=} % equal by definition
\newcommand*\means{:\leftrightarrow} % logically equivalent by definition

\newcommand*\absurd{\,\lightning} % used to end a reductio ad absurdum

%%% SETS %%%

\newcommand*\nullset\varnothing % the empty set
\DeclareMathOperator\card{\#} % cardinality

\newcommand*\inters\bigcap % ``intersectory''
\newcommand*\union\bigcup % ``unitory''

\newcommand*\set[1]{\left\{{#1}\right\}} % \set{x} = \left \{ x \right \}
\newcommand*\setdef[2][x]{\{{#1}\,|\,{#2}\}} % set definition
\newcommand*\Setdef[2][x]{\left\{{#1}\vphantom{#2}\right.\left|\,{#2}\vphantom{#1}\right\}} % set definition (with big brackets)
\newcommand*\pset{\mathscr{P}} % power set

\newcommand*\funarrow{\;\chemarrow\,} % arrow used to declare functions
\newcommand*\fundef[3][f]{{#1}:{#2}\funarrow{#3}} % function declaration

%%% TOPOLOGY %%%

\DeclareMathOperator\comp{\mathscr C} % complementary of set
\newcommand*\clos[1]{\overline{#1}} % closure
\newcommand*\inter[1]{\mathring{#1}} % interior
\DeclareMathOperator\bound{\mathscr F} % boundary

\DeclareMathOperator\dis{\mathrm{d}} % distance

